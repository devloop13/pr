<div class="container signup-container" >

      <h5 class="text-center mt-4 mb-4" style="color:#155e36">Login</h5>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <div class="input-group mb-3">
<div class="input-group-prepend ">
  <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
</div>
<input type="name" id="name"name="name"class="form-control"placeholder="" required
         pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{1,20}$"
        onkeypress="return RestrictSpace()"
        />
        </div>
        <div class="form-group">
          <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
  </div>
    <input
           class = "passphrase"
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="1 number, 1 special character & 1 uppercase character"
            required title="No spaces at the beginning or end of the sentence"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>

    </div>
</div>
</div>
